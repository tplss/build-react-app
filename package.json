{
  "name": "@tplss/build-react-app",
  "version": "0.1.0-0",
  "author": "薛定谔的猫 <weiran.zsd@outlook.com>",
  "description": "just one command to build react app.",
  "main": "./lib/index.js",
  "bin": {
    "build-react-app": "bin/webpack.js"
  },
  "scripts": {
    "lint": "eslint bin/*.js *.js",
    "test": "cd example && npm run build"
  },
  "files": [
    "LICENSE",
    "readme.md",
    "bin",
    "conf",
    "index.js",
    "output-config.js"
  ],
  "dependencies": {
    "common-config-webpack-plugin": "^1.4.0",
    "shelljs": "^0.8.3",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-ts": "^3.1.1",
    "husky": "^3.0.5",
    "mocha": "^6.2.0"
  },
  "keywords": [
    "webpack",
    "react"
  ],
  "eslintConfig": {
    "extends": [
      "ts/node"
    ],
    "overrides": [
      {
        "files": [
          "tests/"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --fix && git add ."
    }
  },
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  }
}
