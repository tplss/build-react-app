{
  "name": "@tplss/build-react-app",
  "version": "0.0.8",
  "author": "薛定谔的猫 <weiran.zsd@outlook.com>",
  "description": "just one command to build react app.",
  "main": "./lib/index.js",
  "bin": {
    "build-react-app": "bin/webpack.js"
  },
  "scripts": {
    "lint": "eslint bin/*.js *.js",
    "test": "cd example && npm run build"
  },
  "files": [
    "LICENSE",
    "readme.md",
    "bin",
    "conf",
    "index.js",
    "output-config.js"
  ],
  "dependencies": {
    "common-config-webpack-plugin": "^1.3.1",
    "webpack": "^4.30.0",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-ts": "^3.1.0",
    "husky": "^1.3.0",
    "mocha": "^6.1.3"
  },
  "keywords": [
    "webpack",
    "react"
  ],
  "eslintConfig": {
    "extends": [
      "ts/node"
    ],
    "overrides": [
      {
        "files": [
          "tests/"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --fix && git add ."
    }
  },
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  }
}
