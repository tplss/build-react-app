    "mini-css-extract-plugin": "^0.5.0",
    "react-hot-loader": "^4.6.3",
    "style-loader": "^0.23.1",
    "sucrase": "^3.8.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.1.5"
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-ts": "^2.0.0-alpha.1",
    "husky": "^1.3.0",
    "mocha": "^5.2.0"
  },
  "keywords": [
    "webpack",
    "react"
  ],
  "eslintConfig": {
    "extends": [
      "ts"
